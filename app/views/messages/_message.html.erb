<% if message.from == "user"%>
  <div class="chat-message">
    <div class="px-4 py-2 rounded-lg bg-blue-500 text-white max-w-xs">
      <p><%= message.content %></p>
    </div>
  </div>
<% else %>
  <div class="chat-message text-right">
    <div class="px-4 py-2 rounded-lg bg-green-500 text-white max-w-xs ml-auto">
      <p><%= message.content %></p>
    </div>
  </div>
<% end %>
